<%- include("../partials/header") %>
    <%- include("../partials/navbar") %>

        <link rel="stylesheet" href="/CSS/star.css">


        <div class="container" style="margin-top: 5rem; margin-bottom: 10rem;">

            <%- include("../partials/flash") %>

                <h6 class="display-6">Cart</h6>
                <div class="row">
                    <div class="col-lg-8">
                        <% for(let item of userCart){ %>
                            <div class="card mb-3" style="width: 100%;">
                                <div class="row g-0">
                                    <div class="col-md-4">
                                        <img style="width: 100%; height: 100%;" src="<%=item.img%>" alt="...">
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                <%=item.name%>
                                            </h5>
                                            <p class="card-text">
                                                <%=item.desc%>
                                            </p>
                                            <form action="/user/<%=currentUser._id%>/cart/<%=item._id%>?_method=DELETE"
                                                method="POST">
                                                <button class="btn btn-sm btn-danger">Remove</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </div>
                    <div class="col-lg-4">
                        <% totalAmount=0%>
                            <h6 class="display-6">Products</h6>
                            <ul class="list-group">
                                <% for(let item of userCart){%>
                                    <li class="list-group-item">
                                        <%=item.name%> - <strong>&#8377 <%=item.price%></strong>
                                    </li>
                                    <% totalAmount+=item.price%>
                                        <% } %>
                                            <ul class="list-group"></ul>
                                            <div class="mt-3">
                                                <p class="fw-bold">Total Amount : &#8377 <%=totalAmount%>
                                                </p>
                                                <a href="/payment" class="btn btn-success">Proceed to Pay</a>
                                            </div>

                    </div>
                </div>

        </div>

        <%- include("../partials/footer") %>